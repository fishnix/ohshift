{
    "display_information": {
        "name": "Shift"
    },
    "features": {
        "bot_user": {
            "display_name": "Shift",
            "always_online": false
        },
        "slash_commands": [
            {
                "command": "/ohshift",
                "description": "Create an incident",
                "usage_hint": "start <SEVERITY> incident <DESCRIPTION>",
                "should_escape": false
            },
            {
                "command": "/shift",
                "description": "Create an incident",
                "usage_hint": "start <SEVERITY> incident <DESCRIPTION>",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "bookmarks:read",
                "bookmarks:write",
                "channels:history",
                "channels:join",
                "channels:manage",
                "channels:read",
                "chat:write",
                "chat:write.public",
                "commands",
                "pins:write",
                "reactions:read",
                "reactions:write",
                "users:read",
                "users:read.email",
                "files:read",
                "groups:read",
                "mpim:read",
                "pins:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "file_created",
                "file_deleted",
                "member_joined_channel",
                "message.channels",
                "pin_added",
                "pin_removed",
                "reaction_added",
                "reaction_removed"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}